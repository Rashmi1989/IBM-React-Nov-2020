<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Salary Calculator</title>
    <style>
        .field{
            margin-bottom: 10px;
        }
        label{ 
            display : block 
        }
        td{ 
            padding-right : 10px;
            font-size: 18pt;
        }
    </style>
    <script src="react.development.js"></script>
    <script src="react-dom.development.js"></script>
    <script src="babel.min.js"></script>
    <script type="text/babel">
      class SalaryCalculator extends React.Component {
       //state
       state = {
           basic:'',
           hra:'',
           da:'',
           tax:'',
           salary:''

       };
         
        onClickCalculate=() => {
          
           const {salaryState} = this.state
           const finalSalary = parseInt(salaryState.basic) + parseInt(salaryState.hra) + parseInt(salaryState.da)
           this.setState({salary:finalSalary})
        };
        onChangeBasic = (event) => {
            this.setState({basic : event.target.value})

        };
        onChangeHRA = (event) => {
            this.setState({hra : event.target.value})

        };
        onChangeDA = (event) => {
            this.setState({da : event.target.value})

        };
        onChangeTax = (event) => {
            this.setState({tax : event.target.value})

        };
          render(){
            return(
                 <div>
                <h1>Salary Calculator</h1>
                <hr/>
                <div class='field'>
                     <label htmlFor=''>Basic :</label>
                      <input type='number' name='' id='' onChange={onChangeBasic}/>
                   </div>
                <div class='field'>
                   <label htmlFor=''>HRA :</label>
                   <input type='number' name='' id='' onChange={onChangeHRA}/>
                 </div>
                <div class='field'>
                <label htmlFor=''>DA :</label>
                <input type='number' name='' id='' onChange={onChangeDA}/>
                </div>
                <div class='field'>
              <label htmlFor=''>Tax :</label>
              <input type='range' name='' id='' min='0'max='30' onChange={onChangeTax}/>
              </div>
                <div class='field'>
                <input type='button' value="Calculate"/>
                </div>
                <div class='field'>
                <table>
                <tbody>
                <tr>
                    <td>{this.state.basic}</td>
                    <td>{this.state.hra}</td>
                    <td>{this.state.da}</td>
                    <td>{this.state.tax}</td>
                    <td>{this.state.salary}</td>
                </tr>
            </tbody>
          </table>
        </div>
                </div>

            )

          }

      }
      ReactDOM.render(
      <div>
        (<SalaryCalculator template={'Have a great day mane'}/>
        </div> ,
        document.getElementById('root'))
    </script>
</head>
<body>
    <div id="root">

    </div>
</body>
</html>
